<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fundo_bichos"
    tools:context=".Fragments.BichosFragment">

    <ImageView
        android:id="@+id/buttonCao"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/cao"
        app:layout_constraintBottom_toTopOf="@+id/buttonLeao"
        app:layout_constraintEnd_toStartOf="@+id/buttonGato"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/buttonGato"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/gato"
        app:layout_constraintBottom_toTopOf="@+id/buttonMacaco"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonCao"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/buttonLeao"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/leao"
        app:layout_constraintBottom_toTopOf="@+id/buttonOvelha"
        app:layout_constraintEnd_toStartOf="@+id/buttonMacaco"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonCao" />

    <ImageView
        android:id="@+id/buttonMacaco"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/macaco"
        app:layout_constraintBottom_toTopOf="@+id/buttonVaca"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonLeao"
        app:layout_constraintTop_toBottomOf="@+id/buttonGato" />

    <ImageView
        android:id="@+id/buttonVaca"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/vaca"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonOvelha"
        app:layout_constraintTop_toBottomOf="@+id/buttonMacaco" />

    <ImageView
        android:id="@+id/buttonOvelha"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ovelha"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonVaca"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonLeao" />
</androidx.constraintlayout.widget.ConstraintLayout>